<!-- Title for the workout update page -->
<h2>Update Your Workout</h2>

<!-- Form to modify an existing workout entry; submits via POST to the workoutâ€™s edit route using its ID -->
<form method="POST" action="/workouts/edit/{{workout._id}}">
  <!-- Text input field showing the current workout title -->
  <div class="mb-3">
    <label>Workout Name</label>
    <input class="form-control" type="text" name="exercise" value="{{workout.exercise}}" required>
  </div>

  <!-- Number input pre-filled with current duration in minutes -->
  <div class="mb-3">
    <label>Time Spent (minutes)</label>
    <input class="form-control" type="number" name="duration" value="{{workout.duration}}" required>
  </div>

  <!-- Textarea displaying existing workout notes -->
  <div class="mb-3">
    <label>Extra Details</label>
    <textarea class="form-control" name="notes">{{workout.notes}}</textarea>
  </div>

  <!-- Button to apply changes and update the workout -->
  <button class="btn btn-primary" type="submit">Save Changes</button>
</form>
