<!-- Title for the workout entry form -->
<h2>Create a Workout Plan</h2>

<!-- Form to submit a new workout; sends data via POST to /workouts/add -->
<form method="POST" action="/workouts/add">
  <!-- Field for entering the name of the exercise -->
  <div class="mb-3">
    <label>Workout Name</label>
    <input class="form-control" type="text" name="exercise" required>
  </div>

  <!-- Field to specify workout time in minutes -->
  <div class="mb-3">
    <label>Time (in minutes)</label>
    <input class="form-control" type="number" name="duration" required>
  </div>

  <!-- Textarea for additional comments or workout description -->
  <div class="mb-3">
    <label>Additional Notes</label>
    <textarea class="form-control" name="notes"></textarea>
  </div>

  <!-- Button to submit the workout details -->
  <button class="btn btn-success" type="submit">Add Workout</button>
</form>
