<!-- Full-page hero-style container -->
<div class="hero-section" style="
  background: url('/images/background.jpg') center center / cover no-repeat;
  min-height: 100vh;
  padding: 40px 20px;
  color: white;
">

  <!-- Page heading -->
  <h2 class="text-center mb-4">Your Workouts</h2>

  <!-- Search form using input-group for consistent height -->
  <form method="GET" action="/workouts" style="max-width: 700px; margin: 0 auto;" class="mb-4">
    <div class="input-group">
      <input class="form-control" type="text" name="q" placeholder="Search exercise..." value="{{keyword}}">
      <button class="btn btn-outline-light" type="submit">Search</button>
    </div>
  </form>

  <!-- Add workout button -->
  <div class="text-center mb-4">
    <a href="/workouts/add" class="btn btn-dark">Add Workout</a>
  </div>

  <!-- Workout cards list -->
  <div style="max-width: 700px; margin: 0 auto;">
    {{#each workouts}}
      <div class="card mb-3 text-dark">
        <div class="card-body">
          <h5>{{exercise}} - {{duration}} mins</h5>
          <p>{{notes}}</p>
          <small>{{date}}</small>
          <div class="mt-2">
            <a href="/workouts/edit/{{_id}}" class="btn btn-sm btn-warning">Edit</a>
            <form method="POST" action="/workouts/delete/{{_id}}" style="display:inline;">
              <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this workout?')">Delete</button>
            </form>
          </div>
        </div>
      </div>
    {{else}}
      <p class="text-center">No workouts found.</p>
    {{/each}}
  </div>

</div>
